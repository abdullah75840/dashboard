<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/commonhead.ejs') %>
</head>
<body>
    <div class="body-wrapper">
        <%- include ('partials/commonnavbar.ejs') %>
        <main class="pt-5 mx-lg-5">
            <div class="container-fluild mt-5">
              <div class="card mb-4">
        
                <!--Card content-->
                <div class="card-body d-sm-flex justify-content-between">
        
                  
                
                        <h6 class="d-flex align-items-center mb-sm-0 pt-1 mr-3">
                            <a href="https://mdbootstrap.com/docs/jquery/" target="_blank">Sort By Event</a>
                            
                          </h6>
                          <form class="d-flex align-items-center">
                            <!-- Default input -->
                            <select class="browser-default custom-select">
                              <option value="">Choose option</option>
                                <% for(var i=0; i< events.length; i++) {%>
                                  <option value="<%= events[i].id %>"><%= events[i].event %></option>
                                  <% } %>
                              </select> 
                            
                
                          </form>
                    
                  
                    <a href="" data-toggle="modal" data-target="#modalLoginForm" class="btn btn-primary ml-auto" type="submit">
                      Add Seats
                    </a>
        
                  
        
                </div>
        
              </div>
              <div class="row">
                <div class="col-12">
                   <!--Card-->
                   <div class="card">
        
                    <!--Card content-->
                    <div class="card-body">
        
                      <!-- Table  -->
                      <table class="table table-hover">
                        <col width="15%">
                        <col width="15%">
                        <col width="15%">
                        <col width="15%">
                        <col width="15%">
                        <col width="35%">
                        <!-- Table head -->
                        <thead class="blue-grey lighten-4">
                          <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Seat</th>
                            <th>Created at </th>
                            <th>Event</th>
                            <th class="text-center">Actions</th>
                          </tr>
                        </thead>
                        <!-- Table head -->
        
                        <!-- Table body -->
                        <tbody>
                          <% for(var i=0; i< seats.length; i++) {%>
                            <tr>
                              <th scope="row"><%= i+1 %></th>
                              <td><%= seats[i].guestname %></td>
                              <td><%= seats[i].seatnumber %></td>
                              <td class="createdAt"><%= seats[i].createdAt %></td>
                              <td><%= seats[i].event.event %></td>
                              <td class="text-center">
                                <a href="#" data-toggle="modal" data-target="#modalupdateForm" seats-name="<%= seats[i].guestname%>" seats-number='<%= seats[i].seatnumber %>' seats-id="<%= seats[i].id %>" seats-event="<%= seats[i].event.id %>" class="btn btn-green btn-md waves-effect waves-light mr-3 btn-edit" ><i class="far fa-edit"></i></a>
                                <a href="/deleteseat/<%= seats[i].id %>" class="btn btn-danger btn-md waves-effect waves-light"><i class="far fa-trash-alt"></i></a>
                              </td>
                            </tr>
                            <% } %>
                        </tbody>
                        <!-- Table body -->
                      </table>
                      <!-- Table  -->
        
                    </div>
        
                  </div>
                  <!--/.Card-->
                </div>
              </div>
              <!-- Central Modal Medium Info -->
             <form action="/addseats" method="post">
              <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Add Seats</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body mx-5">
                    <div class="md-form mb-5">
                      <input type="search" name = "geustname" id="form-autocomplete" class="form-control mdb-autocomplete">   
                      <label for="form-autocomplete" class="">Geust Name</label>
                    </div>
                    <div class="md-form mb-5">
                        <input type="search" name = "seatnumber" id="form-autocomplete" class="form-control mdb-autocomplete">   
                        <label for="form-autocomplete" class="">Seat Number</label>
                      </div>
                      <div class="md-form mb-5">
                        
                          <select class="browser-default custom-select " id="event-select" name="event">
                            <option value="">Choose option</option>
                            <% for(var i=0; i< events.length; i++) {%>
                            <option value="<%= events[i].id %>"><%= events[i].event %></option>
                            <% } %>
                          </select> 
                        
                        
                      </div>
                      <div class="input-group my-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                        </div>
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                          <label class="custom-file-label" for="inputGroupFile01">Seat Image</label>
                        </div>
                      </div>
                  </div>
                  <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-default">Submit</button>
                  </div>
                </div>
              </div>
            </div>
             </form>
            
             <form action="/editseat" method="post">
              <div class="modal fade" id="modalupdateForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Update Seats</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body mx-5">
                    <div class="md-form mb-5 d-none">
                      <input type="search" name = "id" id="form-autocomplete" class="form-control mdb-autocomplete">   
                      <label for="form-autocomplete" class="active">id</label>
                    </div>
                    <div class="md-form mb-5">
                      <input type="search" name = "geustname" id="form-autocomplete" class="form-control mdb-autocomplete">   
                      <label for="form-autocomplete" class="active">Geust Name</label>
                    </div>
                    <div class="md-form mb-5">
                        <input type="search" name = "seatnumber" id="form-autocomplete" class="form-control mdb-autocomplete">   
                        <label for="form-autocomplete" class="active">Seat Number</label>
                      </div>
                      <div class="md-form mb-5">
                        
                          <select class="browser-default custom-select " id="event-select" name="event">
                            <option value="">Choose option</option>
                            <% for(var i=0; i< events.length; i++) {%>
                            <option value="<%= events[i].id %>"><%= events[i].event %></option>
                            <% } %>
                          </select> 
                        
                        
                      </div>
                      <div class="input-group my-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                        </div>
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                          <label class="custom-file-label" for="inputGroupFile01">Seat Image</label>
                        </div>
                      </div>
                  </div>
                  <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-default">Submit</button>
                  </div>
                </div>
              </div>
            </div>
             </form>
        <!-- Central Modal Medium Info-->
        
        
            </div>
          </main>
    </div>

    <%- include ('partials/commonscripts.ejs') %>
    <script>
      $(document).ready(function () {
        $('td.createdAt').each(function (index, element) {
          var dt = $(element).text();
          var newdt = moment(dt).format('Do MMMM, YYYY');
          $(element).text(newdt);
        });

        $('.btn-edit').click(function (e) { 
          e.preventDefault();
          var seatId = $(this).attr('seats-id');
          var seatNumber = $(this).attr('seats-number');
          var seatName = $(this).attr('seats-name');
          var seatEvent = $(this).attr("seats-event")
          $('#modalupdateForm input[name="id"]').val(seatId);
          $('#modalupdateForm input[name="geustname"]').val(seatName);
          $('#modalupdateForm input[name="seatnumber"]').val(seatNumber);
          $('#modalupdateForm select[name="event"]').val(seatEvent);
        });
        $('.btn-edit').click(function(){
          $('#modalupdateForm label').addClass('active');
        });
      });
    </script>
</body>
</html>